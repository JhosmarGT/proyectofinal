<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="288dp">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/producto_nombre"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/producto_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_imagen"
            android:text="Descripcion del producto"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/producto_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_descripcion"
            android:layout_marginStart="10dp"
            android:text="Cantidad 00"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_descripcion"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@id/producto_cantidad"
            android:text="Precio"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="21dp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>