<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="402dp"
        android:layout_height="236dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/fondo"
        android:padding="10dp">

        <TextView
            android:id="@+id/ordenname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ordenphone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:text="Numero"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ordenprecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordenname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Precio"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ordencorreodir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordenprecio"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Correo y Direccion"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ordenfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordencorreodir"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Fecha y Hora"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/verproductosorden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordenfecha"
            android:layout_margin="30dp"
            android:background="@drawable/botones1"
            android:text="VER PRODUCTOS DE ESTA ORDEN"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>


    </RelativeLayout>

</RelativeLayout>