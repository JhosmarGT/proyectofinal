<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginadminActivity"
    android:background="@drawable/fondoblanco">
    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/texto1"
        android:layout_marginTop="5dp"
        android:src="@drawable/perfil"/>


    <EditText
        android:id="@+id/numeroadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textos"
        android:hint="Ingrese su numero"
        android:inputType="phone"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/codigoadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen1"
        android:layout_margin="20dp"
        android:hint="Ingrese el codigo recibido"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/enviarnumeroadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroadmin"
        android:text="Enviar Numero"
        android:layout_margin="22dp"
        android:background="@drawable/botones1"
        android:textColor="@color/white"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/enviarcodigoadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codigoadmin"
        android:text="Confirmar"
        android:layout_margin="22dp"
        android:background="@drawable/botones1"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O tambien puedes iniciar con: "
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@id/facebookadmin"
        />


    <Button
        android:id="@+id/facebookadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/googleadmin"
        android:text="Facebook"
        android:layout_margin="22dp"
        android:background="@drawable/botones1"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <Button
        android:id="@+id/googleadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:layout_margin="15dp"
        android:background="@drawable/botones1"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>