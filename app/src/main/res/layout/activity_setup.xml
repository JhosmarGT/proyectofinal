<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPLETE SUS DATOS"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/teal_200"
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold|italic"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/perfilimagen2"
        android:layout_below="@+id/encabezado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/teal_200"/>

    <EditText
        android:id="@+id/setup_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_imagen"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingrese su nombre"
        android:inputType="text"/>
    <EditText
        android:id="@+id/setup_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_nombre"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingrese su direccion"
        android:inputType="text"/>
    <EditText
        android:id="@+id/setup_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_direccion"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingrese su telefono"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/setup_ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_telefono"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:hint="Ingrese su Ciudad"
        android:inputType="text"/>

    <Button
        android:id="@+id/setup_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_ciudad"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botones1"
        android:padding="10dp"
        android:text="Continuar"
        android:textSize="20dp"/>





</RelativeLayout>